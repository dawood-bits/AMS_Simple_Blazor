@page "/"

<div class="text-center">
    <h2 class="fw-bold text-primary mb-3">
        <i class="bi bi-speedometer2 me-2"></i> Dashboard
    </h2>
    <p class="lead text-muted">
        Welcome to <strong>AMS - Attendance Management System</strong>.  
        Use the navigation above to manage <span class="text-primary">HR</span>,  
        <span class="text-success">Attendance</span>, <span class="text-warning">Leaves</span>, and <span class="text-info">Reports</span>.
    </p>

    <!-- Example quick stats -->
    <div class="row mt-4 g-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-primary fs-1"></i>
                    <h5 class="mt-2">Employees</h5>
                    <p class="text-muted">Manage all staff data</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-fingerprint text-success fs-1"></i>
                    <h5 class="mt-2">Attendance</h5>
                    <p class="text-muted">Track daily check-ins</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check text-warning fs-1"></i>
                    <h5 class="mt-2">Leaves</h5>
                    <p class="text-muted">Manage employee requests</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line text-info fs-1"></i>
                    <h5 class="mt-2">Reports</h5>
                    <p class="text-muted">Generate insights</p>
                </div>
            </div>
        </div>
    </div>
</div>
